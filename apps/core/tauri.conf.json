{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "WhytChat_v1",
  "version": "1.0.0",
  "identifier": "com.whytcard.whytchat-v1",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../desktop-ui/dist"
  },
  "app": {
    "windows": [
      {
        "title": "WhytChat V1",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "decorations": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: asset:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "data/.gitkeep": "data/.gitkeep"
    },
    "publisher": "WhytCard",
    "shortDescription": "AI Chat Application with Local LLM",
    "longDescription": "WhytChat is a local-first AI chat application built with Tauri 2.0, supporting RAG and local LLMs.",
    "category": "Utility",
    "macOS": {
      "signingIdentity": "-",
      "minimumSystemVersion": "10.15",
      "hardenedRuntime": false
    },
    "windows": {
      "nsis": {
        "installMode": "currentUser",
        "displayLanguageSelector": true
      },
      "wix": null
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      },
      "deb": {
        "section": "utils",
        "priority": "optional"
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
