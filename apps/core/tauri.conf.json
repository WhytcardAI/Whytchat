{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "WhytChat_v1",
  "version": "1.0.0",
  "identifier": "com.whytcard.whytchat-v1",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../desktop-ui/dist"
  },
  "app": {
    "windows": [
      {
        "title": "WhytChat V1",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "decorations": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: asset:"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/icon.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "data/.gitkeep": "data/.gitkeep"
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
