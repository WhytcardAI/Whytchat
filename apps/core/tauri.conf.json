{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "whytchat-v1",
  "version": "1.0.0",
  "identifier": "com.whytcard.whytchat-v1",
  "build": {
    "beforeDevCommand": "npm run dev --prefix apps/desktop-ui",
    "beforeBuildCommand": "npm run build --prefix apps/desktop-ui",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../desktop-ui/dist"
  },
  "app": {
    "windows": [
      {
        "title": "WhytChat V1",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: asset:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": []
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
